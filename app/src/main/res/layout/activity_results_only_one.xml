<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_results_only_one"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.john.combinebrasil.ResultsOnlyOneActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <include layout="@layout/toolbar_default" android:id="@+id/include"/>

        <LinearLayout
            android:id="@+id/linear_insert"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:visibility="visible"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.9"
                android:background="@color/grey">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_border"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10sp"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:id="@+id/text_name_player_result"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nome do Jogador"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:textSize="18sp"
                            android:padding="10sp" />

                        <TextView
                            android:id="@+id/text_name_test_result"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginBottom="10sp"
                            android:text="Nome do Teste"
                            android:textSize="16sp"
                            android:textColor="@color/colorPrimary"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:textAlignment="center"
                            android:text="@string/result"/>

                        <EditText
                            android:id="@+id/edit_first_result"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10sp"
                            android:layout_marginStart="25sp"
                            android:layout_marginEnd="25sp"
                            android:layout_marginBottom="10sp"
                            android:layout_marginTop="10sp"
                            android:textSize="18sp"
                            android:maxLength="4"
                            android:digits="0123456789"
                            android:textAlignment="center"
                            android:inputType="number"
                            android:layout_gravity="center"
                            android:background="@drawable/background_edit_border"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_details_test"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_border"
                        android:layout_margin="10sp"
                        android:padding="10sp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:animateLayoutChanges="true">
                        <TextView
                            android:id="@+id/text_name_test_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nome do Teste"
                            android:textColor="@color/colorPrimary"
                            android:gravity="center"
                            android:textSize="18sp"
                            android:padding="10sp" />

                        <TextView
                            android:id="@+id/text_details_test"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/lorem"
                            android:textAlignment="center"
                            android:lineSpacingExtra="2.5dp"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:visibility="gone"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:layout_marginTop="10sp"
                            android:layout_marginBottom="10sp"
                            android:background="@color/grey"
                            ></LinearLayout>
                        <ImageView
                            android:id="@+id/img_test_arrow"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5sp"
                            android:src="@drawable/arrow_down"/>



                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_details_player"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_border"
                        android:layout_margin="10sp"
                        android:padding="10sp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:animateLayoutChanges="true">
                        <TextView
                            android:id="@+id/text_name_player_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nome do Jogador"
                            android:textColor="@color/colorPrimary"
                            android:gravity="center"
                            android:textSize="18sp"
                            android:padding="10sp" />

                        <TextView
                            android:id="@+id/text_details_player"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/lorem"
                            android:textAlignment="center"
                            android:lineSpacingExtra="2.5dp"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:visibility="gone"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:layout_marginTop="10sp"
                            android:layout_marginBottom="10sp"
                            android:background="@color/grey"
                            ></LinearLayout>
                        <ImageView
                            android:id="@+id/img_player_arrow"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5sp"
                            android:src="@drawable/arrow_down"/>



                    </LinearLayout>

                </LinearLayout>


            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:orientation="vertical"
                    >

                    <Button
                        android:id="@+id/button_add_results"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:background="@drawable/background_button_blue"
                        android:text="@string/adicionar"
                        android:textColor="@color/white"
                        android:textAllCaps="true"
                        android:textSize="16sp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_wingspan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey_transparent"
            android:orientation="vertical"
            android:visibility="gone"
            android:clickable="true"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.3"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/background_border"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/wingspan"
                            android:textColor="@color/white"
                            android:background="@color/colorPrimary"
                            android:layout_margin="1dp"
                            android:paddingBottom="15dp"
                            android:paddingTop="15dp"
                            android:paddingLeft="25dp"
                            android:textSize="18sp"
                            android:gravity="left"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/wingspan_message"
                            android:textColor="@color/black"
                            android:paddingBottom="30sp"
                            android:paddingTop="30sp"
                            android:layout_margin="1dp"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:layout_gravity="center"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/example_vertical"
                            android:layout_gravity="center"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.3"/>

                            <EditText
                                android:id="@+id/edit_wingspan"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.4"
                                android:layout_margin="10sp"
                                android:padding="10sp"
                                android:textSize="18sp"
                                android:maxLength="4"
                                android:digits="0123456789,"
                                android:inputType="number"
                                android:background="@drawable/background_edit_border"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.3"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/text_error_wingspan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/red_status"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:visibility="invisible"
                            android:text="@string/value_error"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <Button
                                android:id="@+id/button_wingspan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/background_button_blue"
                                android:textColor="@color/white"
                                android:text="@string/ready"
                                android:layout_marginBottom="20sp"
                                android:layout_marginTop="15sp"
                                android:paddingLeft="50sp"
                                android:paddingRight="50sp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.3"></LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_results_done"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:visibility="gone"
            android:animateLayoutChanges="true"
            >

            <TextView
                android:id="@+id/txt_name_result"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:textColor="@color/colorPrimary"
                android:textSize="22sp"
                android:padding="20sp"
                android:text="@string/name"
                android:textAlignment="center"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/first_result"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        />

                    <TextView
                        android:id="@+id/txt_first_result_done"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="20:00"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/second_result"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        />

                    <TextView
                        android:id="@+id/txt_second_result_done"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="20:00"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="invisible">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/rating"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:paddingBottom="15sp"
                    />

                <RatingBar
                    android:id="@+id/rating_result_done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:numStars="5"
                    android:stepSize="1.0"
                    android:progressTint="@color/yellow"
                    android:secondaryProgressTint="@color/yellow"
                    />
                <TextView
                    android:id="@+id/txt_rating_done"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="alto"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:orientation="vertical"
                android:gravity="bottom"
                android:paddingBottom="20sp"
                >
                <Button
                    android:id="@+id/button_back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:text="@string/back_to_test"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:background="@drawable/background_button_blue"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_no_connection"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:visibility="gone"
            android:animateLayoutChanges="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.2"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:src="@drawable/icon_no_wifi"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:textAlignment="center"
                android:text="@string/no_connection"
                android:textSize="16sp"
                android:padding="10sp"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_transparent"
        android:orientation="vertical"
        android:visibility="gone"
        android:clickable="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05"></LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:orientation="vertical"
                android:background="@drawable/background_white_corner">
                <ProgressBar
                    android:id="@+id/progress"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.6"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/save_test"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_marginBottom="10sp"
                    android:id="@+id/text_progress"
                    android:gravity="center_vertical|center_horizontal" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05"></LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_rating_results"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_transparent"
        android:orientation="vertical"
        android:visibility="gone"
        android:clickable="true"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.3"></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/background_border"
                >
                <TextView
                    android:id="@+id/text_title_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/qualification"
                    android:textColor="@color/white"
                    android:background="@color/colorPrimary"
                    android:layout_margin="1dp"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:paddingLeft="25dp"
                    android:textSize="18sp"
                    android:gravity="left"/>
                <TextView
                    android:id="@+id/text_alert_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/qualification_message"
                    android:textColor="@color/black"
                    android:paddingBottom="30sp"
                    android:paddingTop="30sp"
                    android:layout_margin="1dp"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_gravity="center"/>

                <RatingBar
                    android:id="@+id/rating_results"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:numStars="5"
                    android:stepSize="1.0"
                    android:progressTint="@color/yellow"
                    android:secondaryProgressTint="@color/yellow"
                    />

                <TextView
                    android:id="@+id/text_show_qualify_results"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:visibility="gone"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <Button
                        android:id="@+id/button_ready_results"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_button_blue"
                        android:textColor="@color/white"
                        android:text="@string/ready"
                        android:layout_marginBottom="20sp"
                        android:layout_marginTop="15sp"
                        android:paddingLeft="50sp"
                        android:paddingRight="50sp"
                        />
                </LinearLayout>



            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.3"></LinearLayout>
    </LinearLayout>
</RelativeLayout>
