<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linear_sync_athlete"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="15sp"
        android:paddingBottom="15sp"
        android:paddingRight="10sp"
        android:paddingLeft="10sp"
        android:background="@drawable/background_border_list">
        <LinearLayout
            android:id="@+id/linear_img_done"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/check"
                android:id="@+id/img_status_sync" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_img_sync"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/icon_upload"
                android:id="@+id/img_sync" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:orientation="vertical"
            android:paddingLeft="10sp"
            android:paddingRight="10sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_name_sync"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nome do Jogador"
                    android:layout_marginBottom="10sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:singleLine="true"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/text_code_sync"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Codigo"
                    android:layout_marginBottom="10sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:textAlignment="textEnd"
                    android:singleLine="true"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_first_sync"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Primeiro resultado: 1:02"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/text_second_sync"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textColor="@color/black"
                    android:textAlignment="viewEnd"
                    android:text="Segundo resultado: 1:02"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>