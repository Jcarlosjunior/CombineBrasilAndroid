<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_account_athlete"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.john.combinebrasil.CreateAccountAthlete">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <include layout="@layout/toolbar_default" android:id="@+id/include"/>
        <LinearLayout
            android:id="@+id/linear_create"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:layout_margin="15sp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/edit_name_add"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/nome"
                        android:paddingLeft="10sp"
                        android:paddingBottom="10sp"
                        android:paddingTop="10sp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/greyDark"
                        android:textSize="16sp"
                        android:layout_marginBottom="15sp"
                        android:background="@drawable/background_edit"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        />

                    <EditText
                    android:id="@+id/edit_cpf_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/cpf"
                    android:paddingLeft="10sp"
                    android:paddingBottom="10sp"
                    android:paddingTop="10sp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/greyDark"
                    android:textSize="16sp"
                    android:layout_marginBottom="15sp"
                    android:inputType="number"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:background="@drawable/background_edit"
                    />

                    <EditText
                        android:id="@+id/edit_address_add"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/address_add"
                        android:paddingLeft="10sp"
                        android:paddingBottom="10sp"
                        android:paddingTop="10sp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/greyDark"
                        android:textSize="16sp"
                        android:layout_marginBottom="15sp"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:background="@drawable/background_edit"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <EditText
                            android:id="@+id/edit_email_add"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:hint="@string/email"
                            android:paddingLeft="10sp"
                            android:paddingBottom="10sp"
                            android:paddingTop="10sp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/greyDark"
                            android:textSize="16sp"
                            android:layout_marginRight="10sp"
                            android:layout_marginBottom="15sp"
                            android:background="@drawable/background_edit"
                            android:singleLine="true"
                            android:inputType="textEmailAddress"
                            android:imeOptions="actionNext"
                            />

                        <EditText
                            android:id="@+id/edit_phone_add"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:hint="@string/phone"
                            android:paddingLeft="10sp"
                            android:paddingBottom="10sp"
                            android:paddingTop="10sp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/greyDark"
                            android:textSize="16sp"
                            android:layout_marginBottom="15sp"
                            android:singleLine="true"
                            android:inputType="phone"
                            android:imeOptions="actionNext"
                            android:background="@drawable/background_edit"
                            />

                    </LinearLayout>

                    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                        android:id="@+id/spinner_positions_add"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/position"
                        android:paddingLeft="10sp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/greyDark"
                        android:textSize="16sp"
                        android:layout_marginBottom="15sp"
                        android:background="@drawable/background_edit"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nascimento"
                        android:textSize="15sp"
                        android:textColor="@color/greyDark"
                        android:paddingBottom="5sp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                           android:id="@+id/spinner_day_birthday_add"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_weight="0.2"
                           android:hint="@string/dia"
                           android:paddingLeft="10sp"
                           android:textColor="@color/black"
                           android:textColorHint="@color/greyDark"
                           android:textSize="16sp"
                           android:layout_marginBottom="15sp"
                           android:background="@drawable/background_edit"
                           />

                        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                            android:id="@+id/spinner_month_birthday_add"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:hint="@string/mes"
                            android:paddingLeft="10sp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/greyDark"
                            android:textSize="16sp"
                            android:layout_marginBottom="15sp"
                            android:layout_marginLeft="10sp"
                            android:layout_marginRight="10sp"
                            android:background="@drawable/background_edit"
                            />
                        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                            android:id="@+id/spinner_year_birthday_add"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:hint="@string/ano"
                            android:paddingLeft="10sp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/greyDark"
                            android:textSize="16sp"
                            android:layout_marginBottom="15sp"
                            android:inputType="number"
                            android:background="@drawable/background_edit"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <EditText
                            android:id="@+id/edit_height_add"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:hint="@string/altura"
                            android:paddingLeft="10sp"
                            android:paddingBottom="10sp"
                            android:paddingTop="10sp"
                            android:layout_marginRight="5sp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/greyDark"
                            android:textSize="16sp"
                            android:inputType="number"
                            android:digits="0123456789,"
                            android:maxLength="4"
                            android:singleLine="true"
                            android:imeOptions="actionNext"
                            android:background="@drawable/background_edit"
                            />

                        <EditText
                            android:id="@+id/edit_weight_add"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:hint="@string/peso"
                            android:paddingLeft="10sp"
                            android:paddingBottom="10sp"
                            android:paddingTop="10sp"
                            android:layout_marginLeft="5sp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/greyDark"
                            android:textSize="16sp"
                            android:inputType="number"
                            android:digits="0123456789,"
                            android:singleLine="true"
                            android:maxLength="4"
                            android:imeOptions="actionDone"
                            android:background="@drawable/background_edit"
                            />

                    </LinearLayout>

                        <TextView
                            android:id="@+id/text_terms"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/open_terms"
                            android:textColor="@color/color_primary"
                            android:textStyle="normal"
                            android:textSize="14sp"
                            android:textAlignment="center"
                            android:paddingTop="5sp"
                            android:paddingBottom="5sp"
                            android:layout_marginBottom="20sp"
                            android:layout_marginTop="20sp"
                            />
                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >
                <Button
                    android:id="@+id/button_add_athlete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:layout_marginLeft="25sp"
                    android:layout_marginRight="25sp"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:text="@string/adicionar"
                    android:background="@drawable/background_button_blue"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_no_connection"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:visibility="gone"
            android:animateLayoutChanges="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.2"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:src="@drawable/icon_no_wifi"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:textAlignment="center"
                android:text="@string/no_connection"
                android:textSize="16sp"
                android:padding="10sp"
                />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_progress_add"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_transparent"
        android:orientation="vertical"
        android:visibility="gone"
        android:clickable="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"></LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:orientation="vertical">
                <ProgressBar
                    android:id="@+id/progress_add_account"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.6"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.4"
                    android:text="@string/add_account"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:id="@+id/text_progress_add"
                    android:gravity="center_vertical|center_horizontal" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"></LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_terms"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_transparent"
        android:orientation="vertical"
        android:clickable="true"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.07"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.04"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:orientation="vertical"
                android:background="@drawable/background_white_corner"
                >
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.9">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10sp"
                            android:paddingTop="10sp"
                            android:paddingBottom="10dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:animateLayoutChanges="true">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/terms_title"
                                android:textColor="@color/color_primary"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/text_terms_body"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.8"
                                android:textSize="14sp"
                                />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10sp"
                                android:layout_marginBottom="10sp"
                                android:gravity="center">
                                <CheckBox
                                    android:id="@+id/check_terms"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/aceitar_termos_de_uso"
                                    android:textColor="@color/color_primary"
                                    android:textAlignment="viewStart"
                                    />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </ScrollView>

                <Button
                    android:id="@+id/button_close"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:background="@drawable/background_button_blue"
                    android:text="@string/close"
                    android:textColor="@color/white"
                    android:textAllCaps="true"
                    android:textSize="16sp"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.04"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.03"
            />


    </LinearLayout>
</RelativeLayout>
