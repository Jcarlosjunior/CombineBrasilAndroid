<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_selective"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.john.combinebrasil.CreateSelectiveActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar_default" android:id="@+id/include"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.05"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.9"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/edit_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp"
                        android:textSize="14dp"
                        android:textColor="@color/colorPrimary"
                        android:hint="@string/name_title"
                        android:textColorHint="@color/greyDark"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:background="@drawable/background_edit_border"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:inputType="textPersonName"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                            android:id="@+id/spinner_team"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8"
                            android:hint="@string/team"
                            android:paddingLeft="10sp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/greyDark"
                            android:textSize="14sp"
                            android:layout_marginBottom="5sp"
                            android:background="@drawable/background_edit_border"/>

                        <ImageView
                            android:id="@+id/image_add_team"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:padding="5sp"
                            android:src="@drawable/ic_add_circle_outline_black_24dp"/>



                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/date_selective"
                        android:textSize="15sp"
                        android:textColor="@color/greyDark"
                        android:paddingBottom="5sp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                            android:id="@+id/spinner_day_selective"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:hint="@string/dia"
                            android:paddingLeft="10sp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/greyDark"
                            android:textSize="14sp"
                            android:layout_marginBottom="10sp"
                            android:background="@drawable/background_edit_border"
                            />

                        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                            android:id="@+id/spinner_month_selective"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:hint="@string/mes"
                            android:paddingLeft="10sp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/greyDark"
                            android:textSize="14sp"
                            android:layout_marginBottom="10sp"
                            android:layout_marginLeft="10sp"
                            android:layout_marginRight="10sp"
                            android:background="@drawable/background_edit_border"
                            />
                        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                            android:id="@+id/spinner_year_selective"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:hint="@string/ano"
                            android:paddingLeft="10sp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/greyDark"
                            android:textSize="14sp"
                            android:layout_marginBottom="10sp"
                            android:inputType="number"
                            android:background="@drawable/background_edit_border"
                            />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/local_selective"
                        android:textSize="15sp"
                        android:textColor="@color/greyDark"
                        android:paddingBottom="5sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <EditText
                            android:id="@+id/edit_cep"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:textSize="14dp"
                            android:textColor="@color/colorPrimary"
                            android:hint="@string/cep"
                            android:textColorHint="@color/greyDark"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:background="@drawable/background_edit_border"
                            android:maxLines="1"
                            android:maxLength="9"
                            android:singleLine="true"
                            android:inputType="number"
                            android:layout_marginRight="3sp"
                            />

                        <EditText
                            android:id="@+id/edit_complement"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:textSize="16dp"
                            android:textColor="@color/colorPrimary"
                            android:hint="@string/complement"
                            android:textColorHint="@color/greyDark"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:background="@drawable/background_edit_border"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:inputType="text"
                            android:layout_marginLeft="3sp"
                            />

                    </LinearLayout>


                    <EditText
                        android:id="@+id/edit_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:textSize="14dp"
                        android:textColor="@color/colorPrimary"
                        android:hint="@string/city"
                        android:textColorHint="@color/greyDark"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:background="@drawable/background_edit_border"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:inputType="text"
                        />

                    <EditText
                        android:id="@+id/edit_street"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:textSize="14dp"
                        android:textColor="@color/colorPrimary"
                        android:hint="@string/city"
                        android:textColorHint="@color/greyDark"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:background="@drawable/background_edit_border"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:inputType="text"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <EditText
                            android:id="@+id/edit_neighborhood"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:textSize="14dp"
                            android:textColor="@color/colorPrimary"
                            android:hint="@string/neighborhood"
                            android:textColorHint="@color/greyDark"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:background="@drawable/background_edit_border"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:inputType="text"
                            android:layout_marginRight="3sp"
                            />

                        <EditText
                            android:id="@+id/edit_state"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:textSize="14dp"
                            android:textColor="@color/colorPrimary"
                            android:hint="@string/state"
                            android:textColorHint="@color/greyDark"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:background="@drawable/background_edit_border"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:inputType="text"
                            android:layout_marginLeft="3sp"
                            android:maxLength="2"
                            />
                    </LinearLayout>
                    <EditText
                        android:id="@+id/edit_notes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp"
                        android:textSize="14dp"
                        android:textColor="@color/colorPrimary"
                        android:hint="@string/notes"
                        android:textColorHint="@color/greyDark"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:background="@drawable/background_edit_border"
                        android:inputType="text"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.05"/>
            </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/btn_create_selective"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foregroundGravity="bottom|center_vertical|center_horizontal"
            android:layout_gravity="bottom|center_vertical"
            android:text="@string/create_selective"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:textSize="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:background="@drawable/background_button_blue" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_transparent"
        android:orientation="vertical"
        android:visibility="gone"
        android:clickable="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"></LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.6"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"/>
                    <ProgressBar
                        android:id="@+id/progress"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"/>

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.4"
                    android:text="@string/recording"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:id="@+id/text_progress"
                    android:gravity="center_vertical|center_horizontal" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"></LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"></LinearLayout>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
