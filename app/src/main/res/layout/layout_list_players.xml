<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear_list_players"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="15sp"
        android:paddingBottom="15sp"
        android:paddingRight="10sp"
        android:paddingLeft="10sp"
        android:layout_marginTop="5sp"
        android:layout_marginRight="5sp"
        android:layout_marginLeft="5sp"
        android:background="@drawable/background_border_list">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_name_player_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome do Jogador"
                android:layout_marginBottom="10sp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="22sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_first_result_list"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Primeiro resultado: 1:02"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/text_second_result_list"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textColor="@color/black"
                    android:text="Segundo resultado: 1:02"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/check"
                android:id="@+id/img_status_players" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>