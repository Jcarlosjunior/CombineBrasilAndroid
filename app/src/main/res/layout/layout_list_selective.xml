<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linear_list_selective"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="7sp"
        android:paddingBottom="7sp"
        android:paddingRight="7sp"
        android:paddingLeft="7sp"
        android:background="@drawable/background_border_list">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_name_selective_list"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="Nome do Jogador"
                    android:layout_marginBottom="5sp"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/text_date_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20/20/2017"
                    android:layout_marginBottom="10sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAlignment="textEnd"
                    android:textSize="13sp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/text_team_name_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Primeiro resultado: 1:02"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>